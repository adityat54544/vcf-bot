{
  "name": "aura-vcf-bot",
  "description": "Telegram bot for VCF file manipulation running 24/7",
  "environment": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true,
      "type": "secret"
    },
    "PORT": {
      "description": "Port the bot will listen on",
      "default": "8000",
      "type": "string"
    },
    "WEBHOOK_URL": {
      "description": "Webhook URL for Telegram bot (optional)",
      "required": false,
      "type": "string"
    },
    "SECRET_TOKEN": {
      "description": "Secret token for webhook validation (optional)",
      "required": false,
      "type": "secret"
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "default": "INFO",
      "type": "string"
    }
  },
  "healthCheckPath": "/health",
  "healthCheckInterval": 30,
  "healthCheckTimeout": 5
}
